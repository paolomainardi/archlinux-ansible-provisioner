{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "Archlinux provisioner variables",
    "description": "The installation variables to be used in Ansible",
    "examples": [
        {
            "hostname": "myarch-host",
            "username": "foobar",
            "kernel": "standard",
            "encryption": false,
            "enable_xorg_multitouch_gestures": false,
            "debug": false,
            "office": false,
            "use_mouse_natural_scroll": true
        }
    ],
    "required": [
        "hostname",
        "username",
        "kernel"
    ],
    "properties": {
        "hostname": {
            "$id": "#/properties/hostname",
            "type": "string",
            "title": "The hostname of this installation.",
            "description": "System hostname (/etc/hostname).",
            "default": "",
            "examples": [
                "test"
            ]
        },
        "username": {
            "$id": "#/properties/username",
            "type": "string",
            "title": "The username to create at the installation.",
            "description": "The username of the first user to provision, that will be the sudoer.",
            "default": "",
            "examples": [
                "test"
            ]
        },
        "kernel": {
            "$id": "#/properties/kernel",
            "type": "string",
            "title": "The kernel schema",
            "description": "The kernel to install from the Archlinux supported ones.",
            "default": "",
            "enum": [
                "standard",
                "lts",
                "zen"
            ],
            "examples": [
                "standard"
            ]
        },
        "timezone": {
            "$id": "#/properties/timezone",
            "type": "string",
            "title": "The system timezone",
            "description": "The system timezone used in /etc/localtime",
            "default": "Europe/Rome",
            "examples": [
                "Europe/Rome",
                "Europe/Madrid"
            ]
        },
        "encryption": {
            "$id": "#/properties/encryption",
            "type": "boolean",
            "title": "Encrypt the system",
            "description": "Activating this option configures the system to support file-system encryption",
            "default": false,
            "examples": [
                false
            ]
        },
        "enable_xorg_multitouch_gestures": {
            "$id": "#/properties/enable_xorg_multitouch_gestures",
            "type": "boolean",
            "title": "The enable_xorg_multitouch_gestures schema",
            "description": "Enable touchegg to have multitouch gestures under X11.",
            "default": false,
            "examples": [
                false
            ]
        },
        "debug": {
            "$id": "#/properties/debug",
            "type": "boolean",
            "title": "The debug schema",
            "description": "Enable debug to print verbose messages from supported roles.",
            "default": false,
            "examples": [
                false
            ]
        },
        "office": {
            "$id": "#/properties/office",
            "type": "boolean",
            "title": "The office schema",
            "description": "Enable office applications.",
            "default": false,
            "examples": [
                false
            ]
        },
        "use_mouse_natural_scroll": {
            "$id": "#/properties/use_mouse_natural_scroll",
            "type": "string",
            "title": "The natural scroll schema",
            "description": "Enable natural scroll for mouse.",
            "default": "true",
            "enum": [
                "true",
                "false"
            ],
            "examples": [
                "true"
            ]
        }
    },
    "additionalProperties": true
}
